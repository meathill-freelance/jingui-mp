.button
  display inline-flex
  justify-content center
  align-items center
  height 2em
  padding 0 1em
  border-radius 10rpx
  margin-left auto
  margin-right auto

  .big
    font-size 2em


button[type=primary],
.button-primary
  background-color $primary-color
  color white

.button-secondary
  background-color white
  border 1px solid #DDD

