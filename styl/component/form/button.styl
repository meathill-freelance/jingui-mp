.button
  display inline-flex
  justify-content center
  align-items center
  height 2em
  padding 0 1em
  border-radius 10rpx
  margin-left auto
  margin-right auto
  text-align center

button[type=primary],
.button-primary
  background-color $primary-color

  &.button-hover
    background-color darken($primary-color, 10%)

  &[disabled]
    background-color lighten($primary-color, 20%)
    opacity .6
    color: #EEE

.button-secondary
  background-color white
  border 1px solid #DDD
