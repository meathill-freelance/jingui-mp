.header.cover {
  padding: 0;
}
.h1 {
  font-size: 36rpx;
  padding: 0.5em;
  text-align: center;
}
.switch {
  font-size: 28rpx;
  padding-bottom: 40rpx;
}
.switch switch {
  margin: 0 10rpx;
}
radio-group {
  font-size: 32rpx;
  position: relative;
  padding-left: 40rpx;
  margin-bottom: 40rpx;
}
radio-group.correct {
  background-color: #d4edda;
}
radio-group.wrong {
  background-color: #f8d7da;
}
radio-group .index {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
}
radio-group .icon,
radio-group icon {
  top: 12rpx;
}
.original-article {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.explanation {
  font-size: 28rpx;
  padding: 20rpx 0;
  margin-bottom: 20px;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.blank-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.blank-item {
  display: flex;
  flex-direction: row;
  width: 40%;
  margin-left: 5%;
  margin-bottom: 20rpx;
}
.blank-item:nth-child(2n) {
  margin-left: 8%;
}
.blank-item text {
  color: #f29801;
  display: block;
  font-size: 24rpx;
  width: 40rpx;
}
.blank-item input {
  border-bottom: 1px solid #ccc;
  height: 1.2em;
  min-height: 1.2em;
}
.nav-button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 50rpx;
}
.nav-button button {
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-button .recorder {
  position: relative;
}
.nav-button .tips {
  background-color: rgba(0,0,0,0.4);
  border-radius: 20rpx;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  top: -45rpx;
  left: -80rpx;
  width: 250rpx;
  text-align: center;
  line-height: 2;
}
.nav-button .record-button,
.nav-button .stop-record-button {
  background-color: #fff;
  border: 4rpx solid #f29801;
  display: flex;
  justify-content: cursor;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  padding-left: 0;
  padding-right: 0;
}
.nav-button .record-button image {
  width: 42rpx;
  height: 72rpx;
}
.nav-button .stop-record-button view {
  width: 30rpx;
  height: 30rpx;
  background-color: #f29801;
}
.nav-button .back-button,
.nav-button .next-button {
  background-color: #f29801;
  border: none;
  margin: 0;
  width: 72rpx;
  height: 72rpx;
}
.nav-button .back-button view,
.nav-button .next-button view {
  margin-left: 8rpx;
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-left: 25rpx solid #fff;
  border-bottom: 16rpx solid transparent;
}
.nav-button .back-button {
  transform: rotate(-180deg);
}
