@import "../../styl/variable.styl"

.day-count
  background-color white
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap
  padding 1em
  width 100%

  .button
    margin-right 2em

.others
  border-top 1px solid $primary-color
  display flex
  margin-top 1em
  padding-top .5em
  width 100%

  .icon-user
    margin-right .5em

.intro
  margin .5em
  padding 1em

  .link
    color $primary-color
    text-align right

.sign-up
.quit
  padding .5em 0
  text-align center
  width 100%

  button
    width 640rpx
    height 64rpx
    font-size 28rpx
    line-height 64rpx

.quit
  padding 1.5em 0