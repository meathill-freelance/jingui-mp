.player {
  background-color: #f29801;
  border-radius: 0 0 8rpx 8rpx;
  color: #fff;
}
.player.one-line {
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.player.one-line .controls {
  padding: 10rpx;
  width: 110rpx;
}
.player.one-line .play-button,
.player.one-line .pause-button {
  margin: 0;
}
.player.one-line slider {
  width: 300rpx;
}
.player.playback {
  padding: 0 40rpx;
  align-items: center;
  justify-content: center;
}
.progress-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0 20rpx;
}
slider {
  width: 386rpx;
}
.current,
.total {
  font-size: 24rpx;
  width: 80rpx;
  text-align: center;
}
.controls {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 40rpx;
}
.play-button,
.pause-button,
.backward-button,
.forward-button {
  background-color: #f29801;
  border: 10rpx solid #fff;
  border-radius: 50%;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.play-button,
.pause-button {
  width: 90rpx;
  height: 90rpx;
  margin: 0 50rpx;
}
.play-button.loading view,
.pause-button.loading view {
  display: none;
}
.play-button view {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-top: 18rpx solid transparent;
  border-left: 30rpx solid #fff;
  border-bottom: 18rpx solid transparent;
}
.pause-button view {
  border-left: 10rpx #fff solid;
  border-right: 10rpx #fff solid;
  width: 30rpx;
  height: 36rpx;
}
.backward-button,
.forward-button {
  width: 75rpx;
  height: 75rpx;
  margin: 0;
  position: relative;
}
.backward-button view,
.forward-button view {
  margin-right: 6rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-left: 16rpx solid #fff;
  border-bottom: 12rpx solid transparent;
}
.backward-button view:after,
.forward-button view:after {
  content: '';
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-left: 16rpx solid #fff;
  border-bottom: 12rpx solid transparent;
  position: absolute;
  top: 17rpx;
  left: 30rpx;
}
.backward-button {
  transform: rotate(-180deg);
}
.full {
  display: flex;
  flex-direction: column;
}
.full .controls {
  order: 2;
}
.full .progress-bar {
  order: 1;
}
