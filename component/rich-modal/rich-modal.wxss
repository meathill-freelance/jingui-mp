.backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}
.rich-modal {
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  min-width: 464rpx;
}
.header {
  font-weight: bold;
  line-height: 3;
  text-align: center;
  border-bottom: 1px solid #ddd;
}
.body {
  padding: 20rpx;
}
.footer {
  display: flex;
}
.modal-button {
  border-top: 1px solid #ddd;
  flex: 1;
  line-height: 2.5;
  text-align: center;
}
.modal-button:nth-child(n+2) {
  border-left: 1px solid #ddd;
}
.confirm-button {
  color: #1aad19;
}
.animated {
  animation-duration: 1s;
  animation-fill-mode: both;
}

.animated.infinite {
  animation-iteration-count: infinite;
}

.animated.hinge {
  animation-duration: 2s;
}

.animated.flipOutX,
.animated.flipOutY,
.animated.bounceIn,
.animated.bounceOut {
  animation-duration: .75s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.fadeIn {
  animation-name: fadeIn;
}

.animated.fast {
  animation-duration: 0.5s;
}
