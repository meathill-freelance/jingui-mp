.backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}
.styled-modal {
  width: auto;
  height: auto;
  position: relative;
}
.close-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
}
.close-button::before {
  content: '';
  position: absolute;
  top: 20rpx;
  width: 42rpx;
  height: 4rpx;
  background-color: currentColor;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.close-button::after {
  content: '';
  position: absolute;
  top: 20rpx;
  width: 42rpx;
  height: 4rpx;
  background-color: currentColor;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
